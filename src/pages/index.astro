<style is:global>
  * {
    margin: 0;
    padding: 0;
    box-sizing: border-box;
  }

  html {
    font-size: 17px;
  }

  body {
    font-family: 'DM Sans', -apple-system, BlinkMacSystemFont, sans-serif;
    background: #0a0a0a;
    color: #c8c8c8;
    min-height: 100vh;
    padding: 5rem 2rem;
    line-height: 1.7;
  }

  main {
    max-width: 680px;
    margin: 0 auto;
    animation: fadeIn 0.8s ease-out;
  }

  @keyframes fadeIn {
    from {
      opacity: 0;
      transform: translateY(20px);
    }
    to {
      opacity: 1;
      transform: translateY(0);
    }
  }

  .hero {
    display: flex;
    align-items: center;
    gap: 2rem;
    margin-bottom: 2rem;
  }

  .photo {
    width: 140px;
    height: 140px;
    border-radius: 50%;
    object-fit: cover;
    border: 3px solid #222;
    flex-shrink: 0;
  }

  .hero-text {
    flex: 1;
  }

  h1 {
    font-size: 3rem;
    font-weight: 700;
    color: #fff;
    letter-spacing: -0.02em;
    line-height: 1.1;
    margin-bottom: 0.5rem;
  }

  .tagline {
    font-size: 1.1rem;
    color: #e8a84c;
    font-weight: 500;
    letter-spacing: 0.01em;
  }

  .social-links {
    display: flex;
    gap: 1.25rem;
    margin-bottom: 3rem;
  }

  .social-links a {
    color: #666;
    display: flex;
    align-items: center;
    justify-content: center;
    transition: color 0.15s ease, transform 0.15s ease;
  }

  .social-links a:hover {
    color: #fff;
    transform: translateY(-2px);
  }

  .about {
    margin-bottom: 4rem;
  }

  .about p {
    font-size: 1.15rem;
    margin-bottom: 1rem;
    color: #aaa;
  }

  a {
    color: #e8a84c;
    text-decoration: none;
    transition: color 0.15s ease;
  }

  a:hover {
    color: #f5c77e;
  }

  .projects h2 {
    font-size: 1.5rem;
    font-weight: 700;
    color: #fff;
    margin-bottom: 2rem;
    padding-bottom: 0.75rem;
    border-bottom: 2px solid #1a1a1a;
  }

  .project {
    margin-bottom: 2rem;
    padding-bottom: 2rem;
    border-bottom: 1px solid #1a1a1a;
  }

  .project:last-child {
    border-bottom: none;
  }

  .project h3 {
    font-size: 1.15rem;
    font-weight: 600;
    margin-bottom: 0.5rem;
    color: #f0f0f0;
  }

  .project p {
    font-size: 1rem;
    color: #888;
    margin-bottom: 0.6rem;
    line-height: 1.6;
  }

  .project-links {
    display: flex;
    gap: 1rem;
    font-size: 0.95rem;
    font-weight: 500;
  }

  .project-links a {
    color: #e8a84c;
    padding: 0.25rem 0;
    border-bottom: 1px solid transparent;
  }

  .project-links a:hover {
    border-bottom-color: #e8a84c;
  }

  @media (max-width: 600px) {
    .hero {
      flex-direction: column;
      text-align: center;
    }
    
    h1 {
      font-size: 2.25rem;
    }
    
    .social-links {
      justify-content: center;
    }
  }
</style>
