<style is:global>
  * {
    margin: 0;
    padding: 0;
    box-sizing: border-box;
  }

  html {
    font-size: 16px;
  }

  body {
    font-family: 'Crimson Pro', Georgia, serif;
    background: #0c0c0c;
    color: #d4d4d4;
    min-height: 100vh;
    padding: 4rem 1.5rem;
    line-height: 1.75;
  }

  main {
    max-width: 540px;
    margin: 0 auto;
    animation: fadeIn 1s ease-out;
  }

  @keyframes fadeIn {
    from {
      opacity: 0;
      transform: translateY(16px);
    }
    to {
      opacity: 1;
      transform: translateY(0);
    }
  }

  .photo {
    width: 200px;
    height: 275px;
    border-radius: 50%;
    object-fit: cover;
    margin-bottom: 2rem;
    border: 2px solid #2a2a2a;
  }

  h1 {
    font-size: 1.6rem;
    font-weight: 500;
    margin-bottom: 1.25rem;
    color: #f0f0f0;
  }

  p {
    margin-bottom: 1rem;
    font-size: 1.05rem;
  }

  a {
    color: #e8a84c;
    text-decoration: none;
    transition: color 0.15s ease;
  }

  a:hover {
    color: #f5c77e;
  }

  .social-links {
    display: flex;
    gap: 1.1rem;
    margin-top: 1.5rem;
    margin-bottom: 3rem;
  }

  .social-links a {
    color: #888;
    display: flex;
    align-items: center;
    justify-content: center;
    transition: color 0.15s ease;
  }

  .social-links a:hover {
    color: #e8a84c;
  }

  h2 {
    font-size: 1.1rem;
    font-weight: 500;
    margin-bottom: 1.5rem;
    color: #888;
    letter-spacing: 0.03em;
  }

  .project {
    margin-bottom: 1.75rem;
    padding-bottom: 1.75rem;
    border-bottom: 1px solid #1f1f1f;
  }

  .project:last-child {
    border-bottom: none;
  }

  .project h3 {
    font-size: 1rem;
    font-weight: 500;
    margin-bottom: 0.35rem;
    color: #f0f0f0;
  }

  .project p {
    font-size: 0.95rem;
    color: #888;
    margin-bottom: 0.5rem;
    line-height: 1.65;
  }

  .project-links {
    display: flex;
    gap: 0.75rem;
    font-size: 0.9rem;
  }

  .project-links a {
    color: #e8a84c;
  }

  .project-links a:hover {
    text-decoration: underline;
  }
</style>
